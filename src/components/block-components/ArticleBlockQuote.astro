---
interface Props {
	astroClass: string;
}

const { astroClass } = Astro.props as Props;
---

<blockquote class={`blockquote ${astroClass}`}><slot /></blockquote>

<style>
	.blockquote {
		--quote-offset: -1.5rem;
		font-style: italic;
		position: relative;
		color: var(--color-quote);
		margin-block: 1.6em;
	}

	.blockquote::before {
		content: '“';
		font-size: var(--step-5);
		position: absolute;
		top: var(--quote-offset);
		left: var(--quote-offset);
	}
	.blockquote::after {
		content: '”';
		font-size: var(--step-5);
		position: absolute;
		bottom: var(--quote-offset);
		right: 0;
	}
</style>
