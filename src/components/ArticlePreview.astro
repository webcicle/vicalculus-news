---
import { urlFor } from '../client/builders';
import ArticleInfo from './ArticleInfo.astro';

const { mainImg, title, summary, publishedAt, _id, author, categories, slug } =
	Astro.props.post;

const infoProps = { publishedAt, author, categories };
---

<article class='grid article-preview'>
	<div class='img-container'>
		<img
			src={urlFor(mainImg).maxHeight(250).format('webp').quality(1).url()}
			alt={title}
			class='preview-img'
		/>
	</div>
	<div>
		<a href={`/article/${slug}`} class='article-link'>
			<h2 class='preview-header'>{title}</h2>
		</a>
		<ArticleInfo key={_id} small props={infoProps} />
		<p class='summary'>{summary}</p>
	</div>
</article>

<style>
	.article-preview {
		grid-template-columns: 45% 1fr;
		gap: 0.5rem;
	}

	.article-preview:not(:last-child) {
		margin-bottom: 1rem;
	}

	.img-container {
		max-width: 100%;
		max-height: 250px;
		margin: 0.5em;
		position: relative;
		border-radius: 5px;
		overflow: hidden;
	}

	.preview-img {
		width: 100%;
		max-height: 100%;
		display: block;
		object-fit: cover;
		object-position: center;
	}

	.article-link {
		color: var(--color-text);
		cursor: pointer;
	}
	.article-link:hover {
		color: var(--main-blue);
	}

	.preview-header {
		font-size: var(--step-2);
	}

	.summary {
		font-size: var(--step-0);
		padding-right: 1em;
	}

	@media (max-width: 720px) {
		.article-preview {
			grid-template-columns: 1fr;
		}
		.img-container {
			margin: 0em;
		}
		.summary {
			font-size: var(--step-0);
			padding-right: 0em;
		}
	}
</style>
